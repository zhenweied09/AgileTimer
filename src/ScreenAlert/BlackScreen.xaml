<Window x:Class="ScreenReminder.BlackScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenReminder"
        mc:Ignorable="d"
        Title="BlackScreen" Height="450" Width="800">
    <Grid>
        <Button Visibility="Hidden" Click="Button_Click"  Height="100" Width="100" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Image x:Name="SettingImg" Stretch="Fill" />
        </Button>
        <Label x:Name="lablAlertMessage"  Content="alert message" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
